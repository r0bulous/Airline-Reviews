        .content1 {
            display: flex;
            justify-content: flex-start;
            grid-column: 2 / span 2;
        }

        .content2 {
            display: flex;
            justify-content: flex-start;
            grid-column: 4 / span 2;
        }

        .content3 {
            display: flex;
            justify-content: flex-start;
            grid-column: 6;
        }

        .content4 {
            display: flex;
            justify-content: flex-start;
            grid-column:7;
        }

        .content5 {
            display: flex;
            justify-content: flex-start;
            grid-column: 8;
        }

        .content6 {
            display: flex;
            justify-content: flex-start;
            grid-column: 9;
        }

        .content7 {
            grid-column: 10 / span 2;
        }



    </style>
</head>

