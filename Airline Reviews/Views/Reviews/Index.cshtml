@model IEnumerable<Airline_Reviews.Models.Review>

@{
    ViewBag.Title = "Index";
}

<head>
    <style>

        /* CSS styling and grid setup */


        .grid-container {
            display: grid;
            grid-template-columns: auto auto auto auto auto auto auto auto auto auto;
            grid-gap: 5px;
            background: linear-gradient(lightgrey, lightblue);
            padding: 5px;
        }

            .grid-container > div {
                background-color: rgba(255, 255, 255, 0.8);
                text-align: center;
                padding: 20px 14px;
                font-size: 16px;
            }

        p {
            margin-top: 15px;
            margin-bottom: 1rem;
        }



        /* CSS grid for column headings */


        .item1 {
            grid-column: 1 / span 2;
            grid-row: 1;
            font-weight: 800;
        }

        .item2 {
            grid-column: 3 / span 2;
            font-weight: 800;
        }

        .item3 {
            grid-column: 5;
            font-weight: 800;
        }

        .item4 {
            grid-column: 6;
            font-weight: 800;
        }

        .item5 {
            grid-column: 7;
            font-weight: 800;
        }

        .item6 {
            grid-column: 8;
            font-weight: 800;
        }

        .item7 {
            grid-column: 9 / span 2;
            font-weight: 800;
        }

        /* CSS grid for review index */

        .content1 {
            display: flex;
            justify-content: flex-start;
            grid-column: 1 / span 2;
            padding-left: 2em;
        }

        .content2 {
            display: flex;
            justify-content: flex-start;
            grid-column: 3 / span 2;
        }

        .content3 {
            grid-column: 5;
        }

        .content4 {
            grid-column: 6;
        }

        .content5 {
            grid-column: 7;
        }

        .content6 {
            grid-column: 8;
        }

        .content7 {
            grid-column: 9 / span 2;
        }
    </style>
</head>

<!-- Review button using roundedButton class -->

<p>
    @Html.ActionLink("Create Review", "Create", null, new { @class = "roundedButton" })
</p>


<!-- Column headings in CSS grid * -->

<div class="grid-container">
    <div class="item1">@Html.DisplayNameFor(model => model.Category.AirlineName)</div>
    <div class="item2">@Html.DisplayNameFor(model => model.Title)</div>
    <div class="item3">@Html.DisplayNameFor(model => model.Origin)</div>
    <div class="item4">@Html.DisplayNameFor(model => model.Dest)</div>
    <div class="item5">@Html.DisplayNameFor(model => model.Cabin)</div>
    <div class="item6">@Html.DisplayNameFor(model => model.Stars)</div>

    <!-- CSS grid generated in Razor for reviews -->

@foreach (var item in Model)
{
    <div class="content1">@Html.DisplayFor(modelItem => item.Category.AirlineName)</div>
    <div class="content2">@Html.ActionLink(item.Title, "Details", new { id = item.ID })</div> <!-- Uses review title as ActionLink to details -->
    <div class="content3">@Html.DisplayFor(modelItem => item.Origin)</div>
    <div class="content4">@Html.DisplayFor(modelItem => item.Dest)</div>
    <div class="content5">@Html.DisplayFor(modelItem => item.Cabin)</div>
    <div class="content6">@Html.DisplayFor(modelItem => item.Stars)</div>
    <div class="content7">
        @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.ID })
    </div>




}

</div>


