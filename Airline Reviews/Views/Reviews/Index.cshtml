<head>
    <style>

        .grid-container {
            display: grid;
            grid-template-columns: 1em auto auto auto auto auto auto auto auto auto auto 1em;
            grid-template-rows: 50px auto;
            grid-gap: 10px;
            background-color: #2196F3;
            padding: 10px;
        }

            .grid-container > div {
                background-color: rgba(255, 255, 255, 0.8);
                text-align: center;
                padding: 20px 0;
                font-size: 16px;
            }

        .item1 {
            grid-column: 2 / span 2;
        }

        .item2 {
            grid-column: 4 / span 2;

        }

        .item3 {
            grid-column: 6;
        }

        .item4 {
            grid-column: 7;
        }

        .item5 {
            grid-column: 8;
        }

        .item6 {
            grid-column: 9;
        }

        .item7 {
            grid-column: 10 / span 2;
        }

