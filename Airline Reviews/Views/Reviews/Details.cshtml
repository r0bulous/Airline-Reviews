@model Airline_Reviews.Models.Review

@{
    ViewBag.Title = "Details";
}

<head>
    <style>
 /* Begin Details grid setup/styling */


        .grid-container {
            display: grid;
            grid-template-columns: 10px 1fr 1fr 1fr 1fr 1fr 1fr 1fr 1fr 1fr 1fr 1fr 1fr 1fr 1fr 1fr 10px;
            grid-template-rows: 50px 50px 50px 50px;
            grid-gap: 10px;
            /*padding: 10px;*/
        }

            /*.grid-container > div {
                background-color: rgba(255, 255, 255, 0.8);
                text-align: center;
            }*/

        .item1 {
            display: flex;
            grid-column: 2 / span 3;
            grid-row: 1 / span 1;
            font-weight: 800;
            font-size: 35px;
            justify-content: flex-start;
        }

        .item2 {
            display: flex;
            grid-column: 7;
            grid-row: 1;
            font-weight: 400;
            font-size: 20px;
            justify-content: flex-end;
            padding-top: 9px;
        }

        .item3 {
            grid-column: 8;
            grid-row: 1;
            font-size: 30px;
            font-weight: 800;
            text-align: center;
        }

        .item4 {
            grid-column: 2 / span 7;
            grid-row: 3 / span 4;
            background-image: url();

            @* background-image: @String.Format("url("http://www.gcmap.com/map?P={0}-{1}&MS=bm&MR=120&MX=540x540&PM=*.jpg")", Html.DisplayFor(model => model.Origin), Html.DisplayFor(model => model.Dest))'; *@
        }

        .item5 {
            grid-column: 6;
            grid-row: 2;
            font-weight: 800;
            font-size: 30px;
            display: flex;
            justify-content: flex-end;
        }

        .item6 {
            grid-column: 8;
            grid-row: 2;
            font-weight: 800;
            font-size: 30px;
            display: flex;
            justify-content: flex-start;
        }

        .item7 {
            grid-column: 8;
            grid-row: 2;
            font-weight: 800;
            font-size: 30px;
            display: flex;
            justify-content: flex-start;
        }

        .item8 {
            grid-column: 10 / span 5;
            grid-row: 2;
            font-size: 20px;
            display: flex;
            justify-content: flex-start;
            font-weight: 800;
            padding-top: 10px;
        }

        .item9 {
            display: flex;
            grid-column: 2;
            grid-row: 2;
            font-weight: 400;
            font-size: 20px;
            justify-content: flex-start;
            padding-top: 9px;
        }

        .item10 {
            grid-column: 3;
            grid-row: 2;
            font-size: 20px;
            font-weight: 800;
            padding-top: 8px;
        }

        .item11 {
            grid-column: 10 / span 7;
            grid-row: 3;
            font-size: 16px;
            font-weight: 400;
            display: flex;
            justify-content: flex-start;
        }

        .item12 {
            grid-column: 15;
            grid-row: 2;
            font-size: 30px;
            font-weight: 800;
            display: flex;
            justify-content: flex-end;
        }

        .item13 {
            grid-column: 16;
            grid-row: 2;
            font-size: 16px;
            font-weight: 400;
            padding-top: 10px;
        }

        .item14 {
            grid-column: 10 / span 2;
            grid-row: 7;
            font-size: 16px;
            font-weight: 800;
            display: flex;
            justify-content: flex-start;
        }

        .item15 {
            grid-column: 12 / span 5;
            grid-row: 7;
            font-size: 16px;
            font-weight: 400;
            display: flex;
            justify-content: flex-start;
        }

        .item16 {
            grid-column: 2 / span 7;
            grid-row: 7;
            font-size: 13px;
            font-weight: 400;
            text-align: center;
        }

    </style>
</head>


<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>

<div class="grid-container">
    <div class="item1">
        @Html.DisplayFor(model => model.Category.AirlineName)
    </div>
    <div class="item2">
