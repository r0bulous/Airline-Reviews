<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Airline Reviews</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">

</head>


<!-- Header and Navbar* -->

<body>
    <div class="header-container">
        <div class="header-brand">
            <h1>Airline Reviews</h1>
        </div>

        <!-- Navbar with ActionLinks -->

        <div class="css-navbar">
            <ul>

                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("Airlines", "Index", "Categories")</li>
                <li>@Html.ActionLink("Reviews", "Index", "Reviews")</li>

            </ul>

        </div>

    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />



        <footer>
            <p>&copy; @DateTime.Now.Year - Airline Reviews</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
